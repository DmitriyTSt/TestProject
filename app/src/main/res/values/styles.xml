<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorSecondaryLight</item>
        <item name="android:textColorSecondary">@color/colorSecondaryLight</item>
        <item name="android:textColorPrimary">@color/colorSecondaryLight</item>
    </style>

    <style name="TabLayoutStyle" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorLightInActive</item>
        <item name="android:textColorPrimary">@color/colorSecondaryLight</item>
        <item name="colorAccent">@color/colorSecondaryLight</item>
    </style>

</resources>
